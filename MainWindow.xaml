<Window x:Class="dotnet_calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotnet_calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="400">
    <StackPanel>
        <Label Name="display" FontSize="30" Height="50" Margin="20" Content="{Binding LabelDisplay, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        <UniformGrid x:Name="grid" Columns="3"/>
    </StackPanel>
</Window>
